<div class="kz-chatbot-batch">
	<div class="kz-chatbot-model-info">
		<div class="kz-chatbot-current-model">
			<span class="kz-chatbot-current-model-label">{{currentModelLabel}}:</span>
			{{#hasCurrentModelError}}
				<span class="kz-chatbot-current-model-error">{{currentModelError}}</span>
			{{/hasCurrentModelError}}
			{{^hasCurrentModelError}}
				<span class="kz-chatbot-current-model-value">{{currentModel}}</span>
			{{/hasCurrentModelError}}
		</div>
		<div class="kz-chatbot-model-version">
			<span class="kz-chatbot-model-version-label">{{modelsVersionLabel}}:</span>
			{{#hasModelsError}}
				<span class="kz-chatbot-model-version-error">{{modelsError}}</span>
			{{/hasModelsError}}
			{{^hasModelsError}}
				<span class="kz-chatbot-model-version-value">{{modelsVersion}}</span>
			{{/hasModelsError}}
		</div>
	</div>

	<div class="kz-chatbot-input-section">
		<label>{{inputLabel}}</label>
		<table class="kz-chatbot-queries-table wikitable">
			<thead>
			<tr>
				<th class="query-number">#</th>
				<th>{{queryColumnHeader}}</th>
				<th class="query-actions"></th>
			</tr>
			</thead>
			<tbody id="queries-table-body">
			<tr class="query-row">
				<td class="query-number">1</td>
				<td><div class="query-cell" contenteditable="true" placeholder="{{inputPlaceholder}}"></div></td>
				<td class="query-actions">
					<button class="query-delete mw-ui-button mw-ui-destructive" title="{{deleteQueryLabel}}">Ã—</button>
				</td>
			</tr>
			</tbody>
		</table>
		<button id="add-query" class="mw-ui-button">{{addQueryLabel}}</button>
	</div>

	<div class="kz-chatbot-batch-controls">
		<div id="rephrase-toggle-container" style="display:inline-block; margin-right:1em;"></div>
		<button id="batch-process" class="mw-ui-button mw-ui-progressive">
			{{processButtonText}}
		</button>
		<button id="batch-cancel" class="mw-ui-button mw-ui-destructive" style="display: none;">
			{{cancelButtonText}}
		</button>
		<span id="batch-progress" class="kz-chatbot-batch-progress"></span>
	</div>

	<div id="batch-output-wrapper" style="display: none">
		<div class="batch-results-summary">
			{{totalQueriesLabel}}: <span id="query-count">0</span>
		</div>
		<div class="batch-results-table-wrapper">
			<table class="batch-results-table wikitable">
				<thead>
				<tr>
					<th>{{numberColumnHeader}}</th>
					<th>{{queryColumnHeader}}</th>
					<th>{{responseColumnHeader}}</th>
					<th>{{documentsColumnHeader}}</th>
					<th>{{filteredDocsColumnHeader}}</th>
				</tr>
				</thead>
				<tbody id="results-table-body">
				</tbody>
			</table>
		</div>

		<button id="batch-download" class="mw-ui-button mw-ui-progressive" style="display: none;">
			{{downloadButtonText}}
		</button>
	</div>
</div>
